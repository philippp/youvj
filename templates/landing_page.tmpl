<dev id="bottom"></dev>
<script>
var recent = $recent_videos;
var recentList = jQuery('<ul></ul>');
for( var i = 0; i < recent.length; i++ ){
     recentList.append(
	jQuery('<li></li>').append(
		jQuery('<a href="/'+recent[i][0]+'">'+recent[i][0]+'</a>')
	)
     )
}
jQuery("#recent").append(recentList);

</script>

