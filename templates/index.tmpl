#extends base
#import config
#import json
#def head()
    <link href="/css/vidtunes.css" type="text/css" rel="stylesheet">
    <link href="/css/ui-lightness/jquery.ui.base.css" type="text/css" rel="stylesheet">
    <link href="/css/ui-lightness/jquery-ui-1.8.custom.css" type="text/css" rel="stylesheet">
    <script src="/js/jquery-ui-1.8.custom.min.js"></script>
#end def

#def title()
Look for videos
#end def

#def body()
    <div id="queryForm">
      <form onsubmit="return false;">
        <textarea id="artistnames" name="artistnames">Beatles, Lady Gaga, Aphex Twin</textarea>
      </form>
    </div>
    <div id="friendForm">
    </div>
    <div id="header">
      <div class="header-icon" id="fb-login">

      	<div id="popup-welcome-fb-signin">
 	  <div id="fb-login-button-wrapper">
	    <div id="fb-login-button">
	      <fb:login-button size="large" v="2" onlogin="FBCLogin();"></fb:login-button> 
	    </div>
	  </div>
          <div class="title-section">
	    Connect with Facebook to browse your FB friends' favorites:
	  </div>
	</div><!--#popup-welcome-fb-signin-->

      </div>
      <div class="header-icon" id="search-icon" onclick="renderSearch()">
        <img src="/images/youvj_icons-search-50.png" class="header-icon-img" alt='search' border="0"/><div class="header-icon-text">Search for artists and band names</div>
	<br style="clear:both;"/>
      </div>
      <div class="header-icon" id="friends-icon" onclick="FBC2.browseFriends()">
        <img src="/images/youvj_icons-friends-50.png" class="header-icon-img" alt='search' border="0"/><div class="header-icon-text">Browse your Facebook friends' favorites</div>
	<br style="clear:both;"/>
      </div>
      <br style="clear: both;"/>
    </div>
    <div id="media">
      <div id="browser">
        <div id="artistlisting"></div>
      </div>
      <div id="featureVideo">
      </div>

      <div id="similar-artist-divider"></div>

    </div>
    <script type="text/javascript">
      var UVJ = {};
      #if $hasVar('initialSearch')
      UVJ.onLoadSearch = $json.dumps($initialSearch);
      #end if

      var FBC2 = {};
      #if $hasVar('fbUser')
      FBC2.fbSession = $json.dumps($fbSession);
      FBC2.user = $json.dumps($fbUser);
      #else
      FBC2.user = {};
      #end if
    </script> 
    <script src="/js/vidtunes.js" type="text/javascript"></script>
      
#end def
