#extends base
#import config
#import json
#def head()
    <link href="/css/vidtunes.css" type="text/css" rel="stylesheet">
    <link href="/css/ui-lightness/jquery.ui.base.css" type="text/css" rel="stylesheet">
    <link href="/css/ui-lightness/jquery-ui-1.8.custom.css" type="text/css" rel="stylesheet">
    <script src="/js/jquery-ui-1.8.custom.min.js"></script>
    <script src="/js/vidtunes.js" type="text/javascript"></script>
#end def

#def title()
Look for videos
#end def

#def body()
    <div id="queryForm">
      <form onsubmit="return false;">
        <textarea id="artistnames" name="artistnames">Beatles, Lady Gaga, Aphex Twin</textarea>
      </form>
    </div>
    <div id="friendForm">
    </div>
    <div id="header">
      <div class="header-icon" id="fb-login">
      </div>
      <div class="header-icon" id="search-icon" onclick="renderSearch()">
        <img src="/images/youvj_icons-search-50.png" class="header-icon-img" alt='search' border="0"/><div class="header-icon-text">Search for artists and band names</div>
	<br style="clear:both;"/>
      </div>
      <div class="header-icon" id="friends-icon" onclick="browseFriends()">
        <img src="/images/youvj_icons-friends-50.png" class="header-icon-img" alt='search' border="0"/><div class="header-icon-text">Browse your Facebook friends' favorites</div>
	<br style="clear:both;"/>
      </div>
      <br style="clear: both;"/>
    </div>
    <div id="media">
      <div id="browser">
        <div id="artistlisting"></div>
      </div>
      <div id="featureVideo">
      </div>

      <div id="similar-artist-divider"></div>

    </div>
    <div id="popup-welcome-container">
      <div id="popup-welcome-border">
	<div id="popup-welcome">
	  <div class="title">Rediscover music videos with $config.title !</div> 
	  <div id="popup-welcome-fb">
            <div class="title-section">
	      Connect with Facebook to browse your FB friends' favorites:
	    </div>
	    <div id="fb-login-button-wrapper">
	      <div id="fb-login-button">
		<fb:login-button size="large" v="2" onlogin="FBCLogin();"></fb:login-button> 
	      </div>
	    </div>
	    <br/>
	    <a href="#" onclick="\$('#popup-welcome-search').show(); \$('#popup-welcome-fb').hide();">Not on Facebook? Click here!</a>
	  </div>
	  <div id="popup-welcome-search">
            <span class="title-section">
              Search band names:
	      <form onsubmit="return false;">
		<textarea id="welcome-artistnames" name="artistnames">Beatles, Lady Gaga, Aphex Twin</textarea>
              </form>
	      <button id="welcome-search">Search</button>
            </span>
	  </div>
	</div>
      </div><!-- #popup-welcome-border -->
    </div><!-- #popup-welcome-container -->
    <script type="text/javascript" src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php"></script>
    <script type="text/javascript">
      FB_RequireFeatures(["Api"], function() {  
      // Create an ApiClient object, passing app's API key and  
      // a site relative URL to xd_receiver.htm  
      FB.init("$config.FB_APP_KEY","xd_receiver.htm",{"ifUserConnected":FBCLogin});
      });
      var UVJ = {};
      #if $hasVar('load_search')
      UVJ.onLoadSearch = $json.dumps($load_search);
      #end if
    </script> 
#end def
